{
  "name": "RaffleBee Cart Banner",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "ðŸŽ¯ You're close to entering our sweepstakes!"
    },
    {
      "type": "color",
      "id": "banner_color",
      "label": "Banner Background Color",
      "default": "#008060"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}